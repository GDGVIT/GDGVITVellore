<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    android:weightSum="100">
    <include layout="@layout/toolbar_layout"
        android:id="@+id/app_bar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="About Us"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/textView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="22">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:text=" GDG VIT Vellore is a non-profit developers group to learn share and know more about Google technologies.Our events are open to newbies,developers,managers and organizations who are interested in Google technologies or use them as a part of their projects"
            android:id="@+id/textView2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#3A4AAC">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Work Flow Statistics"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/textView3" />
    </LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:paddingRight="5dp"
        android:background="#3A4AAC"
        android:paddingLeft="5dp"
        android:weightSum="100"
        >
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_weight="25">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fl">

            <sk.kandrac.circularview.CircularView
                android:id="@+id/circle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3A4AAC"
                android:onClick="circleClick"
                android:padding="0dp"
                app:outer_width="8dp"
                app:rotate_speed="1"
                app:default_color="#3A4AAC">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/ic_black1" />

            </sk.kandrac.circularview.CircularView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inc"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:text="80%"
                    android:layout_gravity="center"/>
        </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Coding"
        android:paddingTop="5dp"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@android:color/white"/>
</LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_weight="25">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sk.kandrac.circularview.CircularView
                android:id="@+id/circle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3A4AAC"
                android:onClick="circleClick"
                android:padding="0dp"
                app:outer_width="8dp"
                app:rotate_speed="1"
                app:default_color="#3A4AAC">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/ic_black1" />


            </sk.kandrac.circularview.CircularView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inc2"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:text="65%"
                    android:layout_gravity="center" />
        </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Designing"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_weight="25">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sk.kandrac.circularview.CircularView
                android:id="@+id/circle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3A4AAC"
                android:onClick="circleClick"
                android:padding="0dp"
                app:outer_width="8dp"
                app:rotate_speed="1"
                app:default_color="#3A4AAC">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/ic_black1" />

            </sk.kandrac.circularview.CircularView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inc3"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:text="70%"
                    android:layout_gravity="center" />
        </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testing"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:layout_weight="25">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <sk.kandrac.circularview.CircularView
                android:id="@+id/circle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#3A4AAC"
                android:onClick="circleClick"
                android:padding="0dp"
                app:outer_width="8dp"
                app:rotate_speed="1"
                app:default_color="#3A4AAC">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:src="@drawable/ic_black1" />


            </sk.kandrac.circularview.CircularView>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inc4"
                    android:textSize="17dp"
                    android:textColor="@android:color/white"
                    android:layout_gravity="center"
                    android:text="95%"/>
        </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Marketing"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>
</LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#3A4AAC"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What we Do"

            android:id="@+id/textView7" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:background="#3A4AAC"
        android:weightSum="100"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            android:gravity="center">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ico1"
                android:id="@+id/dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tech Talks"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            android:gravity="center">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ico2"
                android:id="@+id/dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEV Fests"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            android:gravity="center">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ico3"
                android:id="@+id/dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Code School"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="25"
            android:gravity="center">
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:src="@drawable/ico4"
                android:id="@+id/dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BetaTesting"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@android:color/white"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>


